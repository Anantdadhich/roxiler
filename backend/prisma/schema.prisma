generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Data {
  id          String   @id @default(uuid())
  title       String
  description String?
  price       Float
  category    String
  image       String?
  sold        Boolean
  dateOfSale  DateTime

  @@index([dateOfSale])
  @@index([category])
}
